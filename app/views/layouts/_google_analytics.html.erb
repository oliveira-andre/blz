<% if Rails.env.production? %>
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= Rails.application.credentials[Rails.env.to_sym][:google][:analytics_id] %>"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){ dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '<%= Rails.application.credentials[Rails.env.to_sym][:google][:analytics_id] %>');
  </script>
<% end %>