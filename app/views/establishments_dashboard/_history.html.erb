
<% if @scheduling_history.any? %>
<div class="columns is-multiline">
  <% @scheduling_history.each do |s| %>
    <div class="column is-12">
      <div class="box">
        <article class="media">
          <div class="media-left">
            <figure class="image">
              <img src="https://bulma.io/images/placeholders/64x64.png">
            </figure>
          </div>
          <div class="media-content">
            <div class="columns is-multiline">
              <div class="column is-6">
                <div class="content">
                  <p class="has-text-weight-semibold">
                    <%= s.service.title %>
                  </p>
                  <p>
                    <span class="has-text-weight-semibold">André</span> (69) 9 9368-5534
                  </p>
                </div>
              </div>
              <div class="column is-6">
                <div class="content is-pulled-right">
                  <p>
                    <i class="fas fa-money-bill-wave is-size-4"></i>
                    <%= s.service.amount %>
                  </p>
                  <p>
                    <i class="fas fa-clock is-size-4"></i>
                    <%= s.begin_time %> - <%= s.end_time %>
                  </p>
                  <div class="level-item button is-info">
                    <i class="fas fa-eye"></i>
                    <span> detalhes</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </article>
      </div>
    </div>
  <% end %>      
</div>
<% else %>
   <div class="columns is-multiline is-centered is-vcentered no-scheduling">
    <div class="column is-5">
      <p class="has-text-grey-light has-text-weight-semibold is-size-3 has-text-centered">
        Você ainda não possui histórico de agendamentos :(
      </p>
    </div>
    <div class="column is-12">
      <p class="has-text-grey-light is-size-1 has-text-centered">
        <i class="fas fa-business-time"></i>
      </p>
    </div>
  </div>
<% end%>