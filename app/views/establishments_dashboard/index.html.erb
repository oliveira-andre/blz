<%= render 'shared/header' %>
<div class="establishments_dashboard">
  <div class="container">
    <div class="columns is-multiline">
      <div class="column is-12 content-tab" id="scheduling">
        <% if @scheduling.any? %>
          <div class="columns is-multiline">
            <div class="column is-12">
              <h1 class="is-size-4 has-text-grey"> Minha agenda </h1>
            </div>
            <% @scheduling.each do |s| %>
              <%= render 'scheduling_card',
                          schedule: s,
                          service: s.professional_service.service,
                          professional: s.professional_service.professional %>
            <% end %>
          </div>
        <% else %>
          <div class="column is-12">
            <p class="has-text-centered has-text-white-light is-size-4">
              Você ainda não possui agendamentos :(
            </p>
          </div>
        <% end %>
      </div>
      <div class="column is-12 content-tab" id="services" style="display:none">
        <div class="columns is-multiline is-mobile">
          <div class="column is-6">
            <h1 class="is-size-4 has-text-grey"> Serviços </h1>
          </div>
          <div class="column is-6">
            <%= link_to 'Novo', new_establishment_service_path(establishment_id: current_user.establishment.id),
              class: "button is-light is-pulled-right"%>
          </div>
        </div>
        <div class="columns is-multiline">
          <% current_user.establishment.services.each do |service| %>
            <%= render 'service_card', service: service %>
          <% end %>
        </div>
      </div>
      <div class="column is-12 content-tab" id="professionals" style="display:none">
        <div class="columns is-multiline is-mobile">
          <div class="column is-6">
            <h1 class="is-size-4 has-text-grey"> Profissionais </h1>
          </div>
          <div class="column is-6">
            <%= link_to 'Novo', new_establishment_professional_path(establishment_id: current_user.establishment.id),
              class: "button is-light is-pulled-right"%>
          </div>
        </div>
        <div class="columns is-multiline">
          <% current_user.establishment.professionals.each do |professional| %>
            <%= render 'professional_card', professional: professional %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'bottom_navigation_bar' %>
</div>
