<%= render 'shared/header' %>
<div class="establishments_dashboard">
  <div class="container">
    <div class="columns is-multiline">
      <div class="column is-12">
        <div  id="scheduling" class="content-tab">
          <% if @scheduling.any? %>
            <div class="columns is-multiline">
              <div class="column is-12">
                <h1 class="is-size-4 has-text-grey"> Minha agenda </h1>
              </div>
              <% @scheduling.each do |s| %>
                <%= render 'scheduling_card',
                            schedule: s,
                            service: s.professional_service.service,
                            professional: s.professional_service.professional %>
              <% end %>
            </div>
          <% else %>
            <div class="column is-12">
              <p class="has-text-centered has-text-white-light is-size-4">
                Você ainda não possui agendamentos :(
              </p>
            </div>
          <% end %>
        </div>
      </div>
      <div class="column is-12">
        <div  id="services" class="content-tab" style="display:none">
          <%= render 'services' %>
        </div>
      </div>
      <div class="column is-12">
        <div  id="professionals" class="content-tab" style="display:none">
          <%= render 'professionals' %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'bottom_navigation_bar' %>
</div>
