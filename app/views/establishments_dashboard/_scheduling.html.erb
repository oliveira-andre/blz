<h1 class="is-size-4"> Minha Agenda </h1>
<% if @scheduling.any? %>
<div class="columns is-multiline">
  <form>
    <div class="column is-12">
      <button class="button is-ligth is-active" type="button">Hoje</button>
      <button class="button is-ligth" type="button">Semana</button>
      <button class="button is-ligth" type="button">Mês</button>
      <button class="button is-ligth" type="button">Histórico</button>
    </div>
  </form>
</div>

<div class="columns is-multiline">
  <% @scheduling.each do |s| %>
    <div class="column is-12">
      <div class="box">
        <article class="media">
          <div class="media-left">
            <figure class="image">
              <img src="https://bulma.io/images/placeholders/64x64.png">
            </figure>
          </div>
          <div class="media-content">
            <div class="columns is-multiline">
              <div class="column is-6 is-flex-mobile">
                <div class="content">
                  <p class="has-text-weight-semibold">
                    <%= s.professional_service.service.title %>
                  </p>
                  <p>
                    <span class="has-text-weight-semibold"><%= s.user.name %></span> <%= s.user.phone %>
                  </p>
                </div>
              </div>
              <div class="column is-6 is-flex-mobile">
                <div class="content is-pulled-right">
                  <p>
                    <i class="fas fa-money-bill-wave is-size-4"></i>
                    <%= s.professional_service.service.amount %>
                  </p>
                  <p>
                    <i class="fas fa-clock is-size-4"></i>
                    <%= "#{day_month(s.date)} - #{time(s.date)}" %>
                  </p>
                  <p>
                    <span class="tag is-size-6 is-white"><%= s.t_status %></span>
                  </p>
                  <div class="level-item button is-info">
                    <i class="fas fa-eye"></i>
                    <span> detalhes</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </article>
      </div>
    </div>
  <% end %>      
</div>
<% else %>
   <div class="columns is-multiline is-centered is-vcentered no-scheduling">
    <div class="column is-4">
      <p class="has-text-grey-light has-text-weight-semibold is-size-3 has-text-centered">
        Você ainda não possui agendamentos :(
      </p>
    </div>
    <div class="column is-12">
      <p class="has-text-grey-light is-size-1 has-text-centered">
        <i class="fas fa-business-time"></i>
      </p>
    </div>
  </div>
<% end%>