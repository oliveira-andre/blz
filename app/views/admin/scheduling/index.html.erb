<%= render 'admin/shared/header'%>
<div class="scheduling-admin">
  <div class="container">
    <div class="content">
      <h1 class="has-text-grey">Agendamentos</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Serviço</th>
            <th>Usuário</th>
            <th>Estabelecimento</th>
            <th>Quanto</th>
            <th>Valor</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @schedulings.each do |scheduling| %>
            <tr>
              <td><%= scheduling.service.title %></td>
              <td><%= scheduling.user&.name %></td>
              <td><%= scheduling.professional_service.service.establishment.name %></td>
              <td><%= "#{day_month(scheduling.date)} às #{time(scheduling.date)}" %></td>
              <td><%= scheduling.service.amount %></td>
              <td><%= link_to :detalhes, admin_scheduling_path(scheduling), class: 'is-capitalized' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% if @schedulings.present? %>
      <%= pagy_bulma_nav(@pagy).html_safe %>
    <% end %>
  </div>
</div>

