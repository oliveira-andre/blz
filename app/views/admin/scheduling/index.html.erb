<%= render 'admin/shared/header', to_back: true %>

<div class="container">
  <div class="content">
    <h1 class="has-text-grey">Agendamentos</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Serviço</th>
          <th>Usuário</th>
          <th>Estabelecimento</th>
          <th>Quanto</th>
          <th>Valor</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @shedulings.each do |sheduling| %>
          <tr>
            <td><%= sheduling.service.title %></td>
            <td><%= sheduling.user.name %></td>
            <td><%= sheduling.professional_service.service.establishment.name %></td>
            <td><%= "#{day_month(sheduling.date)} às #{time(sheduling.date)}" %></td>
            <td><%= sheduling.service.amount %></td>
            <td><a href="#">detalhes</a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if @shedulings.present? %>
    <%= pagy_bulma_nav(@pagy).html_safe %>
  <% end %>
</div>

