<%= render 'shared/header', to_back: true %>
<div class="devise">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
  <section class="login_form">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4 is-mobile">
        <div class="box">

          <div class="columns is-mobile is-centered thumbnail-user">
            <div class="column is-half">
              <figure class="avatar">
                <img class="is-rounded" src="https://placehold.it/128x128">
              </figure>
            </div>
          </div>

          <div class="column is-12 is-mobile">
            <p class="subtitle">
              <%= current_user.name %>
            </p>
          </div>

          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <div class="control">
              <%= f.label :name, "Nome", class: "label" %>
              <%= f.text_field :name, class: "input is-medium", placeholder: "Informe seu nome" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :email, "Email", class: "label" %>
              <%= f.email_field :email, autocomplete: "email", class: "input is-medium", placeholder: "ex: example@blz.life" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :cpf, "CPF", class: "label" %>
              <%= f.text_field :cpf, class: "input is-medium cpf", placeholder: "Informe seu CPF" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :birth_date, "Data de nascimento", class: "label" %>
              <%= f.date_field :birth_date, class: "input is-medium", placeholder: "Informe sua data de nascimento" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :phone, "Telefone", class: "label" %>
              <%= f.text_field :phone, class: "input is-medium phone", placeholder: "Informe seu telefone" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :current_password, "Sua senha atual", class: "label" %>
              <%= f.password_field :current_password, class: "input is-medium", placeholder: "Sua senha atual" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :password, "Nova senha (para altera a senha)", class: "label" %>
              <%= f.password_field :password, class: "input is-medium", placeholder: "Informe uma senha" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :password_field, "Cofirme sua nova senha (para altera a senha)", class: "label" %>
              <%= f.password_field :password_confirmation, class: "input is-medium", placeholder: "Confirme sua senha" %>
            </div>
          </div>

          <div class="columns is-mobile field">
            <div class="column">
              <%= link_to "Voltar", root_path, class: "button is-block is-large is-fullwidth" %>
            </div>

            <div class="column">
              <%= f.submit "Cadastrar", class: "button is-block is-info is-large is-fullwidth" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% end %>
</div>