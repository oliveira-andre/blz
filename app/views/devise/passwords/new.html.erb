<%= render 'shared/header', to_back: new_user_session_path, fixed: false %>
<div class="form-login">
  <div class="container">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'custom' }) do |f| %>
      <div class="columns is-multiline">
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="column is-12">
          <h1 class="is-size-4 has-text-grey has-text-centered"> Informe seu email </h1>
        </div>
        <div class="column is-12">
          <div class="field">
            <label class="label has-text-grey has-text-weight-normal">Email <small class="is-danger">*</small></label>
            <div class="control">
              <%= f.email_field :email, class: "input", placeholder: "ex: exemplo@blz.life", required: true %>
            </div>
          </div>
        </div>
        <div class="column is-12 has-text-centered">
          <%= link_to 'Voltar', new_user_session_path, class: 'button is-text has-text-grey' %>
          <%= f.submit 'Enviar', class: 'button is-light' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
