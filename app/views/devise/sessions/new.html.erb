<%= render 'shared/header', to_back: root_path %>
<div class="form-login">
  <div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {  class: 'custom' }) do |f| %>
      <div class="columns is-multiline">
        <div class="column is-12">
          <h1 class="is-size-4 has-text-grey has-text-centered"> Faça seu acesso </h1>
        </div>
        <div class="column is-12">
          <div class="field">
            <label class="label has-text-grey has-text-weight-normal">Email <small class="is-danger">*</small></label>
            <div class="control">
              <%= f.email_field :email, class: "input", placeholder: "ex: exemplo@blz.life", required: true %>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="field">
            <label class="label has-text-grey has-text-weight-normal">Senha <small class="is-danger">*</small></label>
            <div class="control">
              <%= f.password_field :password, class: "input", placeholder: "Informe sua senha", required: true %>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="field">
            <%= f.check_box :remember_me, class: 'is-checkradio', id: 'local_type_home' %>
            <label for="local_type_home" class="label has-text-grey has-text-weight-normal">Lembrar-me</label>
          </div>
        </div>
        <div class="column is-12">
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %>
        </div>
        <div class="column is-12 has-text-centered">
          <%= link_to 'Voltar', root_path, class: 'button is-text has-text-grey' %>
          <%= f.submit 'Entrar', class: 'button is-light' %>
        </div>
        <div class="column is-12">
          <p class="has-text-grey has-text-centered">
            Ainda não tem uma conta? <%= link_to "Cadastre-se", new_registration_path(resource_name) %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>