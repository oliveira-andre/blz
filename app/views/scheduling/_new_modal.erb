<div id="new-modal-scheduling" class="modal is-active">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <% if @professional_service.service.establishment.photo.attached? %>
              <%= image_tag @professional_service.service.establishment.photo, class:'image' %>
            <% else %>
              <img src="https://bulma.io/images/placeholders/128x128.png">
            <% end %>
          </figure>
        </div>
        <div class="media-content">
          <div class="columns is-multiline">
            <div class="column is-12">
              <div class="content">
                <p class="has-text-weight-semibold">
                  <%= @professional_service.service.establishment.name %>
                </p>
                <p>
                  <i class="fas fa-star is-size-5"></i>
                  <i class="fas fa-star is-size-5"></i>
                  <i class="fas fa-star is-size-5"></i>
                  <i class="far fa-star is-size-5"></i>
                  <i class="far fa-star is-size-5"></i>  
                </p>
              </div>
            </div>
            <div class="column is-4">
                <i class="fas fa-money-bill-wave is-size-4"></i>
                R$ <%= @professional_service.service.amount.to_i %>
            </div>
            <div class="column is-4">
                <i class="fas fa-hourglass-half is-size-4"></i>
                <%= @professional_service.service.duration %> minutos
            </div>
            <div class="column is-4">
                <i class="fas fa-clock is-size-4"></i>
                <%= "#{day_month(@date)} Ã s #{time(@date)}" %>
            </div>
            <% unless @professional_service.service.establishment.address.nil? %>
              <div class="column is-12">
                <span>
                  <i class="fas fa-map-marker-alt is-size-4"></i>
                  <%= @professional_service.service.establishment.address.full %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </article>
      <%= form_with url: professional_service_scheduling_index_path(professional_service_id: @professional_service.id), local: true do |f| %>
        <%= f.hidden_field :date, value: @date %>
        <%= f.button class: 'button is-info is-rounded' do %>
          <strong>Confirmar agendamento para </strong>
          <%= "(#{day_month(@date)} - #{time(@date)} )" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>