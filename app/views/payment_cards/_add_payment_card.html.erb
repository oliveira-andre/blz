<div id="add_payment_card" class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <header class="modal-card-head has-background-primary">
      <p class="modal-card-title has-text-weight-bold has-text-white">
        Cartão de crédito
      </p>
    </header>
    <section class="modal-card-body">
      <%= form_with model: current_user.payment_cards.build, class: :custom do |f| %>
        <div class="column is-12">
          <div class="field">
            <label class="label has-text-grey has-text-weight-normal">Número do cartão <small class="is-danger">*</small></label>
            <div class="control">
              <%= f.text_field :number, required: true, class: :input, placeholder: 'Informe o número do cartão', maxlength: '19' %>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="field">
            <label class="label has-text-grey has-text-weight-normal">Nome do titular <small class="is-danger">*</small></label>
            <div class="control">
              <%= f.text_field :holder_name, required: true, class: :input, placeholder: 'Informe o igual no cartão' %>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="field">
            <label class="label has-text-grey has-text-weight-normal">CPF do titular <small class="is-danger">*</small></label>
            <div class="control">
              <%= f.text_field :holder_cpf, required: true, class: :input, placeholder: 'Informe o CPF' %>
            </div>
          </div>
        </div>
        <div class="field is-horizontal">
          <div class="column is-6">
            <label class="has-text-grey has-text-weight-normal field-label">Validade <small class="is-danger">*</small></label>
            <div class="field-body">
              <div class="field">
                <div class="control">
                  <%= f.text_field :expiration_month, required: true, class: :input, placeholder: 'MM', maxlength: '2' %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.text_field :expiration_year, required: true, class: :input, placeholder: 'AA', maxlength: '2' %>
                </div>
              </div>
            </div>
          </div>
          <div class="column is-6">
            <label class="has-text-grey has-text-weight-normal field-label">CVV <small class="is-danger">*</small></label>
            <input type="text" placeholder="ex: 635" class='input'>
          </div>
        </div>
        <div class="column is-12 has-text-right">
          <%= button_tag :cancelar, class: 'button modal-close-custom is-capitalized', type: :button %>
          <%= f.submit :salvar,  class: 'button is-primary is-capitalized' %>
        </div>
      <% end %>
    </section>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>
