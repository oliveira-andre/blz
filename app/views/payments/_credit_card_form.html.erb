 <%= form_with url: scheduling_payments_path(scheduling_id: @scheduling.id), id: 'payment_form', local: true do |f| %>
  <div class="columns is-multiline">
    <div class="column is-4">
      <div class="field">
        <div class="control">
          <label class="label" for="email">Nome do titular</label>
          <%= f.text_field :fullname, id: 'fullname', class:'input', required: true %>
        </div>
      </div>
    </div>

    <div class="column is-4">
      <div class="field">
        <div class="control">
          <label for="number" class="label">CPF</label>
          <%= f.text_field :cpf, id: 'cpf', class:'input cpf', required: true %>
        </div>
      </div>
    </div>

    <div class="column is-4">
      <div class="field">
        <div class="control">
          <label class="label">Data de nascimento</label>
          <%= f.date_field :birth_date, id: 'birthdate', class: 'input', required: true %>
        </div>
      </div>
    </div>

    <div class="column is-6">
      <div class="field">
        <div class="control">
          <label for="number" class="label">Número do cartão</label>
          <%= f.number_field :number, id: 'card_number', class:'input', required: true %>
        </div>
      </div>
    </div>
    <div class="column is-2">
      <div class="field">
        <div class="control">
          <label for="cvc" class="label">CVC</label>
          <%= f.number_field :cvc, id: 'card_cvc', class:'input', required: true %>
        </div>
      </div>
    </div>

    <div class="column is-2">
      <div class="control">
        <label class="label">Data de validade</label>
        <div class="select">        
          <%= f.select("expiration_month", (1..12).to_a, {}, id: 'expiration_month') %>        
        </div>
        <div class="select">      
          <%= f.select("expiration_year", credit_card_expiration_year_range, {}, id: 'expiration_year') %>
        </div>
      </div>
    </div>

    <div class="column is-2">
      <div class="control">
        <label class="label">Número de parcelas</label>
        <div class="select">        
          <%= f.select :installment_count, (1..3).to_a %>        
        </div>
      </div>
    </div>

    
    <div class="column is-12">
      <div class="control">
        <%= f.submit 'Finalizar agendamento', class: 'button is-info is-pulled-right is-fullwidth'%>
      </div>
    </div>
