<div class="container">
  <h1 class="title has-text-centered has-text-primary is-size-1">BLZ</h1>
  <h2 class="subtitle has-text-centered has-text-white  is-size-2">Agendamento cancelado</h2>

  <div class="item">
    <p class=" has-text-centered has-text-primary is-size-3">
      Olá, <%= @scheduling.service.establishment.name %>!
    </p>
  </div>

  <div class="item">
    <p class="has-text-centered is-size-3">
      O cliente <strong><%= @scheduling.user.name %></strong> cancelou um agendamento.
    </p>
  </div>

  <div class="item">
    <p class="has-text-centered has-text-grey is-size-4">
      Serviço
    </p>
    <p class="has-text-centered is-size-3">
      <%= @scheduling.service.title %>
    </p>
  </div>

  <div class="item">
    <p class="has-text-centered has-text-grey is-size-4">
      Profissional
    </p>
    <p class="has-text-centered is-size-3">
      <%= @scheduling.professional.name %>
    </p>
  </div>

  <div class="item">
    <p class="has-text-centered has-text-grey is-size-4">
      Quando
    </p>
    <p class="has-text-centered is-size-3">
      <%= "#{I18n.l(@scheduling.canceled_at, format: :day_month)} às #{I18n.l(@scheduling.canceled_at, format: :time)}" %>
    </p>
  </div>

  <div class="item has-text-centered">
    <%= link_to 'Mais detalhes', establishments_dashboard_url(@scheduling.service.establishment), class: 'button is-primary is-size-4' %>
  </div>

  <div class="item">
    <p class="has-text-centered has-text-grey is-size-4">
      Abraços, </br>
      Equipe BLZ
    </p>
  </div>
</div>
