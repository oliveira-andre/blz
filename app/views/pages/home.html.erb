<%= render 'shared/header', to_back: false, fixed: false %>
<div class="home_page">
  <div class="section-search">
    <div class="container">
      <h1 class="title has-text-white has-text-weight-normal">O jeito mais rápido de encontrar serviços de beleza</h1>
      <%= form_with url: filter_services_path, method: :get, authenticity_token: false, local: true do |f| %>
        <div class="field">
          <div class="control">
            <%= f.text_field :query, class: 'input is-rounded',
                            placeholder: 'Busque por um serviço...',
                            autocomplete: 'off', required: true %>

            <%= submit_tag 'buscar', class: 'button is-rounded', name: nil %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="section-category">
    <div class="container">
      <h1 class="has-text-grey is-size-4 has-text-centered">Explore nossos serviços</h1>
      <div class="columns is-multiline is-gapless">
        <% Category.all.each do |category| %>
          <div class="column is-4">
            <%= link_to filter_services_path({ category: category.id }) do %>
              <div class="image-mobile" style='background: url(/images/default_category<%= category.order %>medium.jpg); background-size: cover;'>
                <p class="has-text-centered has-text-white has-text-weight-semibold is-size-4"><%= category.name %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>