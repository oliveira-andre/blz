<div class="card">
  <div class="card-image">
    <figure class="image">
      <% if service.photos.attached? %>
        <%= image_tag service.thumbnail(load_cover(service), :medium) %>
      <% else %>
        <img src="<%= default_image_service(service) %>">
      <% end %>
    </figure>
  </div>
  <div class="card-content">
    <p class="title has-text-black is-size-7"><%= service.title %></p>
    <div class="columns is-multiline infos is-mobile">
      <div class="column is-6">
        <p class="is-size-6-desktop is-size-7">Duração</p>
        <span class="icon has-text-black is-size-7"><i class="far fa-clock"></i></span>
        <span class="is-size-7 has-text-black has-text-weight-semibold"><%= service.duration %>m</span>
      </div>
      <div class="column is-6">
        <p class="is-size-7-desktop is-size-7">Situação</p>
        <span class="icon has-text-black is-size-7"><i class="fas fa-info-circle"></i></span>
        <span class="is-size-7 has-text-black has-text-weight-semibold"><%= service.t_status %></span>
      </div>
      <div class="column is-6">
        <% if service.start_from %>
          <p>A partir de</p>
        <% end %>
        <p class="is-size-7 has-text-black has-text-weight-semibold">R$ <%= service.amount %></p>
      </div>
      <div class="column is-6 has-text-centered">
        <%= link_to 'Agendar', edit_establishment_service_path(service.establishment_id, service.id),
                    class: "button is-light"%>
      </div>
    </div>
  </div>
</div>