<h1 class="title"><%= @service.title %></h1>
<p class="subtitle"><%= @service.description %></p>
<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </figure>
    </div>
    <div class="media-content">
      <div class="columns is-multiline">
        <div class="column is-12">
          <div class="content">
            <p class="has-text-weight-semibold">
              <%= @service.establishment.name %>
            </p>
            <p>
              <i class="fas fa-star is-size-5"></i>
              <i class="fas fa-star is-size-5"></i>
              <i class="fas fa-star is-size-5"></i>
              <i class="far fa-star is-size-5"></i>
              <i class="far fa-star is-size-5"></i>  
            </p>
          </div>
        </div>
        <div class="column is-4">
            <i class="fas fa-money-bill-wave is-size-4"></i>
            R$ <%= @service.amount.to_i %>
        </div>
        <div class="column is-4">
            <i class="fas fa-hourglass-half is-size-4"></i>
            <%= @service.duration %> minutos
        </div>
        <div class="column is-4">
            <i class="fas fa-clock is-size-4"></i>
            <%= @service.establishment.timetable %>
        </div>
        <div class="column is-12">
          <span>
            <i class="fas fa-map-marker-alt is-size-4"></i>
            Rua Tabajara, 2803, Liberdade - Porto Velho / RO
          </span>
        </div>
      </div>
    </div>
  </article>
</div>
<%= link_to service_details_path(service_id: @service.id), remote: true,
            class: 'button is-info is-rounded' do %>
  <strong>Agendar no primeiro horário disponível</strong> (Hoje - 10:00 ) 
<% end %>
