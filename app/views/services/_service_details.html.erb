<div class="columns is-multiline">
  <div class="column is-12 is-8-desktop">
    <h1 class="title">
      <%= @service.title %>
    <span id="service-sharing"
      data-tile="<%= @service.title %>"
      data-text="Faça seu agendamento no BLZ com <%= @service.establishment.name %>"
      data-url="<%= service_url(@service) %>"
      class="icon is-size-5 has-text-grey">
        <i class="fas fa-share-alt"></i>
      </span>
    </h1>
    <p class="subtitle"><%= @service.establishment.name %></p>
    <p class="description"><%= @service.description %></p>
  </div>
  <!-- INFOs to mobile and tablet -->
  <div class="column is-12 is-hidden-desktop">
    <div class="columns is-mobile is-hidden">
      <div class="column is-6 review">
        <p>207 avaliações</p>
        <p>
          <i class="fas fa-star is-size-6"></i>
          <i class="fas fa-star is-size-6"></i>
          <i class="fas fa-star is-size-6"></i>
          <i class="far fa-star is-size-6"></i>
          <i class="far fa-star is-size-6"></i>
        </p>
      </div>
      <div class="column is-6 favorite">
        <a><i class="far fa-heart is-size-5"></i> Favoritar</a>
      </div>
    </div>
    <div class="columns is-multiline is-mobile">
      <div class="column is-12 info">
        <p>Atendimento</p>
        <p class='is-size-5'><i class="far fa-clock"></i></p>
        <p><%= @service.establishment.timetable %></p>
      </div>
      <div class="column is-12 info">
        <p>Duração estimada</p>
        <p class='is-size-5'><i class="fas fa-hourglass-start"></i></p>
        <p><%= @service.duration %> minutos</p>
      </div>
      <div class="column is-12 info">
        <p>Local de atendimento</p>
        <p class='is-size-5'><i class="fas fa-map-marker-alt has-text-grey"></i></p>
        <% if @service.home? %>
          <p>A domicílio</p>
        <% elsif @service.establishment? %>
          <p>No estabelecimento: <%= @service.establishment.address.full %></p>
        <% else %>
          A domicílio ou no estabelecimento: <%= @service.establishment.address.full %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- INFOs to desktop -->
  <div class="column is-4 is-hidden-touch">
    <div class="box">
      <div class="columns is-multiline info">
        <div class="column is-12">
          <% if @service.start_from %>
            <p>A partir de</p>
          <% end %>
          <p class="title">R$ <%= @service.amount %>
            <p>
            </div>
            <div class="column is-12">
              <p>Atendimento</p>
              <p class='is-size-5'><i class="far fa-clock is-clock-service"></i></p>
              <p><%= @service.establishment.timetable %></p>
            </div>
            <div class="column is-12 info">
              <p>Duração estimada</p>
              <p class='is-size-5'><i class="fas fa-hourglass-start"></i>
                <p><%= @service.duration %> minutos</p>
              </div>
              <div class="column is-12">
                <p>Local de atendimento</p>
                <p class='is-size-5'><i class="fas fa-map-marker-alt"></i></p>
                <% if @service.home? %>
                  <p>A domicílio</p>
                <% elsif @service.establishment? %>
                  <p>No estabelecimento: <%= @service.establishment.address.full %></p>
                <% else %>
                  A domicílio ou no estabelecimento: <%= @service.establishment.address.full %>
                <% end %>
              </div>
              <div class="column is-12">
                <a href="#schedule" class="button is-light btn-schedule">Horários</a>
              </div>
            </div>
          </div>
        </div>
      </div>
