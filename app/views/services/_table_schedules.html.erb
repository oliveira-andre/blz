<table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth" id="table-office_hours">
  <thead>
  <tr>
    <th>Dia</th>
    <th>Inicio</th>
    <th>Fim</th>
    <th class="has-text-centered">Ações</th>
  </tr>
  </thead>
  <tbody id="table_content">
  <% office_hours.each do |office_hour| %>
    <tr>
      <td><%= office_hour.week_day %></td>
      <td><%= mask_hour(office_hour.hour_begin) %></td>
      <td><%= mask_hour(office_hour.hour_end) %></td>
      <td class="has-text-centered">
        <%= link_to service_office_hour_path(params[:id], office_hour.id), class: "button is-danger", method: :delete do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>