<div id="details-model-scheduling" class="modal is-active">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="columns is-multiline">
            <div class="column is-12">
              <div class="content">
                <p class="has-text-weight-semibold">
                  <%= @service.establishment.name %>
                </p>
                <p>
                  <i class="fas fa-star is-size-5"></i>
                  <i class="fas fa-star is-size-5"></i>
                  <i class="fas fa-star is-size-5"></i>
                  <i class="far fa-star is-size-5"></i>
                  <i class="far fa-star is-size-5"></i>  
                </p>
              </div>
            </div>
            <div class="column is-4">
                <i class="fas fa-money-bill-wave is-size-4"></i>
                R$ <%= @service.amount.to_i %>
            </div>
            <div class="column is-4">
                <i class="fas fa-hourglass-half is-size-4"></i>
                <%= @service.duration %> minutos
            </div>
            <div class="column is-4">
                <i class="fas fa-clock is-size-4"></i>
                <%= '02/03 Ã s 10:00' %>
            </div>
            <div class="column is-12">
              <span>
                <i class="fas fa-map-marker-alt is-size-4"></i>
                Rua Tabajara, 2803, Liberdade - Porto Velho / RO
              </span>
            </div>
          </div>
        </div>
      </article>
      <%= link_to new_service_scheduling_path(service_id: @service.id),
                  class: 'button is-info is-rounded' do %>
        <strong>Continuar agendamento para </strong> (Hoje - 10:00 ) 
      <% end %>
    </div>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>