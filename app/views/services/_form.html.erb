<%= form_with model: @service, url: url, local: true do |f| %>

  <div class="columns is-multiline">
    <div class="column is-12">
      <% if @service.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @service.errors.full_messages.each do |msg| %>
              <div class="notification is-danger">
                <button class="delete" type="button"></button>
                <%= msg %>
              </div>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="column is-12">
      <% if @service.new_record? %>
        <h1 class="has-text-centered has-text-weight-bold	is-size-4">Adicionar Serviço</h1>
      <% else %>
        <h1 class="has-text-centered has-text-weight-bold	is-size-4">Editar Serviço</h1>
      <% end %>
    </div>

    <% if @service.photos.present? %>
    <% else %>
      <div class="column is-7 is-offset-5">
        <h3> Selecione suas fotos <h3/>
          <%= f.file_field :photos, multiple: true, id: "files" %>
      </div>
    <% end %>

    <% unless @service.new_record? %>

      <% if @service.photos.present? %>
        <div class="column is-12">
          <div class="card">
            <div class="card-content is-inline">
              <div class="content">
                <% (0...@service.photos.count).each_with_index  do |index| %>
                  <div class="<%= index %>">
                    <%= image_tag(@service.thumbmail_smal(index)) %>
                  </div>
                <% end %>
              </div>
            </div>
            <footer class="card-footer">
              <% @service.photos.each do |index| %>
                <%= link_to 'Remove', photo_path(index) ,remote: true, id: "remuve_photo_#{index.id}",
                            method: :delete,
                            data: {confirm: 'Você tem certeza?'}, class: "card-footer-item" %>
              <% end %>
            </footer>
          </div>
        </div>
      <% end %>
    <% end %>

    <div class="column is-12">
      <div class="field">
        <%= f.label "Título", class: "label" %>
        <div class="control">
          <%= f.text_field :title, class: "input" %>
        </div>
      </div>
    </div>

    <div class="column is-12">
      <div class="field">
        <%= f.label "Descrição", class: "label" %>
        <div class="control">
          <%= f.text_area :description, class: "textarea" %>
        </div>
      </div>
    </div>

    <div class="column is-2">
      <div class="field">
        <%= f.label "Valor", class: "label" %>
        <div class="control">
          <%= f.text_field :amount, class: "input" %>
        </div>
      </div>
    </div>

    <div class="column is-2">
      <div class="field">
        <%= f.label "Duração (O tempo deve ser em minutos)", class: "label" %>
        <div class="control">
          <%= f.text_field :duration, class: "input", placeholder: "Duração em minutos" %>
        </div>
      </div>
    </div>

    <div class="column is-4">
      <div class="field">
        <%= f.label "Categoria", class: "label" %>
        <div class="control">
          <div class="select">
            <%= f.select :category_id, Category.all.collect {|c| [c.name, c.id]}, prompt: "Selecione" %>
          </div>
        </div>
      </div>
    </div>

    <div class="column is-4">
      <%= f.label "Onde o serviço é feito ?", class: "label" %>
      <div class="control">
        <label class="radio">
          <%= f.radio_button :local_type, 'home' %>
          Em casa
        </label>
        <strong> ou </strong>
        <label class="radio">
          <%= f.radio_button :local_type, 'establishment' %>
          No estabelecimento
        </label>
      </div>
    </div>
  </div>

  <div class="columns is-multiline">
    <div class="column is-12">
      <div class="is-pulled-right">
        <%= f.submit "Salvar", class: "button is-primary" %>
      </div>
    </div>
  </div>

<% end %>

