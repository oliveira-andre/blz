<div class=" column is-4">
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <% if professional_service.professional.photo.attached? %>
            <%= image_tag professional_service.professional.photo %>
          <% else %>
            <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
          <% end %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= professional_service.professional.name %></strong>
          </p>
        </div>
        <nav class="level is-mobile">
          <div class="level-left">
            <%= link_to establishment_service_professional_service_path(
                          establishment_id: professional_service.service.establishment_id,
                          service_id: professional_service.service_id,
                          id: professional_service.id
                        ),
                        method: :delete,
                        data: { confirm: 'VocÃª tem certeza disso?' },
                        class: "level-item button is-link is-small is-danger",
                        aria: {label: "reply"} do %>
              <i class="fas fa-trash"></i>
              <span> Remover</span>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
</div>