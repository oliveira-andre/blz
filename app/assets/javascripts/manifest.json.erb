<% icon_sizes = [512, 192, 152, 96, 72] %>
{
  "name": "BLZ",
  "short_name": "BLZ",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "serviceworker-rails/icon-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#2AC5CA",
  "background_color": "#FFFFFF",
  "display": "standalone",
  "orientation": "portrait"
}
